@model Event

<div class="row mt-3">
    <div class="col-lg-8">
        <div class="bg-white p-4 row">
            <div class="col-8">
                <img style="height:300px;" class="img-fluid rounded" src="@Model.EventImage" />
            </div>
            <div class="col-4">
                <h1 class="h4 mb-5 text-danger"><b>@Model.EventName</b> </h1>

                <div>
                    <p>@Model.Description</p>
                    <p>Location: <b>@Model.EventLocation</b></p>
                    <p><i class="bi bi-calendar"> Date:</i> <b>@Model.EventDate.ToString()</b> </p>
                </div>
                <form action="/event/RegisterForEvent" method="post">
                    <input type="hidden" asp-for="EventName"/>
                    <button class="btn btn-primary">Register Now!</button>
                </form>
            </div>
            
        </div>

        <div class="bg-white mt-3">
            <div class="card border-0">
                <div class="card-header">
                    <h4 id="commentCount"  style="display:inline-block" >@Model.Comments.Count() comment</h4>
                </div>
                <br />
                <div class="card-body">
                    <div id="comments">
                        <ul class="list-group">
                                @foreach (var comment in Model.Comments)
                                {
                                    <li class="list-group-item list-group-item-action">
                                        <div class="my-4 d-flex">
                                            <img style="width:60px" class="avatar rounded-circle float-start me-3" src="@comment.User.Image" />
                                            <div>
                                                <div class="mb-2 d-flex">
                                                    <h6 class="CommentUserNameTitle">
                                                    <a style="text-decoration:none" asp-controller="User" asp-action="Profile" asp-route-id="@comment.User.UserId" >@comment.User.UserName</a>
                                                    </h6>
                                                    <small> @comment.PublishedOn.ToString("d")</small>
                                                </div>
                                                <p>@comment.Text</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                        </ul>
                        
                    </div>
                
                        <hr class="my-4" />
                
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <div>
                            <h4>Yorum ekle</h4>
                            <form action="/event/AddComment" method="post">
                                <input type="hidden" id="EventId" name="EventId" value="@Model.EventId" />
                                <input type="hidden" name="id" value="@Model.EventId" />

                                <div class="col-md-12">
                                    <label for="Text" class="form-label">Yorum</label>
                                    <textarea type="text" name="Text" id="Text" class="form-control" rows="3"> </textarea>
                                </div>

                                <div class="col-md-12 mt-3">
                                    <button id="btnComment" type="submit" class="btn btn-outline-success">Kaydet</button>
                                </div>
                            </form>
                        </div>
                    }
                    else
                    {
                        <p>

                            You must log in to comment!
                            <a class="btn btn-outline-warning" asp-controller="User" asp-action="Login">Login</a>
                        </p>
                    }

                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        @await Html.PartialAsync("_categories")
        <br />
        <br />
        @await Html.PartialAsync("_questions")

    </div>
</div>




