@model Event

<div class="row mt-3">
    <div class="col-lg-8">
        <div class="bg-white p-4 row">
            <div class="col-8">
                <img style="width:400px" class="img-fluid rounded" src="@Model.EventImage" />
            </div>
            <div class="col-4">
                <h1 class="h4 mb-4">@Model.EventName</h1>


                <div>
                    <p>@Model.Description</p>
                    <p>@Model.EventLocation</p>
                </div>
            </div>
            
        </div>

        <div class="bg-white mt-3">
            <div class="card border-0">
                <div class="card-header">
                    <h4 id="commentCount"  style="display:inline-block" >@Model.Comments.Count() adet yorum.</h4>
                </div>
                <br />
                <div class="card-body">
                    <div id="comments">
                        @foreach(var comment in Model.Comments)
                        {
                            <div class="my-4 d-flex">
                                <img style="width:60px" class="avatar rounded-circle float-start me-3" src="@comment.User.Image" />
                                <div>
                                    <div class="mb-2 d-flex">
                                        <h6 class="CommentUserNameTitle">@comment.User.UserName</h6>
                                        <small> @comment.PublishedOn.ToString("d")</small>
                                    </div>
                                    <p>@comment.Text</p>
                                </div>
                            </div>
                        }
                    </div>
                
                        <hr class="my-4" />
                
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <div>
                            <h4>Yorum ekle</h4>
                            <form action="/event/AddComment" method="post">
                                <input type="hidden" id="EventId" name="EventId" value="@Model.EventId" />
                                <input type="hidden" name="id" value="@Model.EventId" />

                                <div class="col-md-12">
                                    <label for="Text" class="form-label">Yorum</label>
                                    <textarea type="text" name="Text" id="Text" class="form-control" rows="3"> </textarea>
                                </div>

                                <div class="col-md-12 mt-3">
                                    <button id="btnComment" type="submit" class="btn btn-outline-success">Kaydet</button>
                                </div>
                            </form>
                        </div>
                    }
                    else
                    {
                        <p>
                            Yorum yapmak için giriş yapmalısnız!
                            <a class="btn btn-outline-warning" asp-controller="User" asp-action="Login"> Giriş yap</a>
                        </p>
                    }

                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">

    </div>
</div>




