@model User

<div class="row mt-3">
    <div class="col-md-2">
        <div  class="bg-white p-4">
            <img src="@Model.Image"
            class="img-fluid"/>
        </div>
    </div>

    <div class="col-md-10">
        <div class="bg-white p-4">
            <h5>@Model.Name @Model.LastName</h5>
            <hr />
            <div id="usersComment">
                <h5 style="display:inline-block"
                    onmouseover="this.style.backgroundColor='#212529'; this.style.color='White';"
                    class="my-4"
                    onmouseout="this.style.backgroundColor='White'; this.style.color='#212529';">
                    @Model.UserName's comments:
                </h5>

                <ul class="list-group">
                    @foreach(var comment in Model.Comments)
                    {
                        <li class="list-group-item list-group-item-action">
                            <i class="bi bi-caret-right-fill"></i>
                            <a style="text-decoration:none" asp-controller="Event" asp-action="Details" asp-route-id="@comment.Event.EventId">@comment.Text</a>
                        </li>
                    }
                </ul>


            </div>
        </div>
    </div>
</div>


