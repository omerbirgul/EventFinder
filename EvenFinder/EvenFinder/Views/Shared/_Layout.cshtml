<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EvenFinder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EvenFinder.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-apple">  Event Finder</i>
            </a>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a asp-controller="Event" asp-action="List" class="nav-link">
                        <i class="bi bi-card-list">   Events</i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">Blog</a>
                </li>
                <li class="nav-item active">
                    <a href="#" class="nav-link">
                        <i class="bi bi-telephone">  Contact</i>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto"> 

                @if (User.Identity!.IsAuthenticated)
                {
                <li class="nav-item">
                    <a href="/profile/@User.Identity.Name" class="nav-link">@User.Identity.Name</a>
                </li>

                <li class="nav-item">
                    <a asp-controller="User" asp-action="Logout" class="nav-link">Logout</a>
                </li>
                }
                else
                {
                <li class="nav-item">
                    <a asp-controller="User" asp-action="Login" class="nav-link">Login</a>
                </li>
                    <li class="nav-item">
                        <a asp-controller="User" asp-action="Register" class="nav-link">Register</a>
                    </li>
                }
            </ul>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @* @RenderSection("Scripts", required: false) *@
        </main>
    </div>

